
[Unit]
Description=Qlock Control Webserver

[Service]
User=pi
WorkingDirectory=/home/pi/qlock/
ExecStart=/bin/bash -lc '/home/pi/.local/bin/gunicorn -b 0.0.0.0:5000 controls:app'
Restart=always
StandardInput=null
StandardOutput=file:/var/log/control-server/control-server.log
StandardError=file:/var/log/control-server/control-server.err
KillMode=mixed
TimeoutStopSec=5

[Install]
WantedBy=multi-user.target
